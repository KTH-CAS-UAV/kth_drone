<?xml version="1.0"?>
<robot  xmlns:xacro="http://www.ros.org/wiki/xacro" name="sim_drone">

  <link name="drone_base">
    <visual>
      <geometry>
        <box size="0.25 .25 .10"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
	<material name="rgb">
	<color rgba="0 1.0 1.0 1.0"/>
	</material>
    </visual>
  </link>


 <link name="d_camera">
    <visual>
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
      <origin rpy="0 0.0 0 " xyz="0.0 0.0 0.0"/>
	<material name="black">
	<color rgba="0.0 0.0 0.0 1.0"/>
	</material>
    </visual>
  </link>

  <joint name="drone_base_to_d_camera" type="fixed">
    <parent link="drone_base"/>
    <child link="d_camera"/>
    <origin rpy="0.026 0.649 0.014" xyz="0.193 0.082 -0.256"/>
  </joint>

